<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>get-crud</title>

    <style>
      .btn-edit {
        outline: none;
        border: none;
        background-color: orange;
        border-radius: 2px;
        cursor: pointer;
      }
      .btn-remove {
        outline: none;
        border: none;
        background-color: red;
        border-radius: 2px;
        cursor: pointer;
      }
    </style>
  </head>

  <body>
    GET CRUD FROM VIEW

    <table class="table">
      <tr>
        <th>Email</th>
        <th>FristName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Action</th>
      </tr>

      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a
            class="btn-edit"
            type="button"
            href="/edit-crud?id=<%= dataTable[i].id %>"
          >
            >Edit</a
          >
          <a
            class="btn-remove"
            href="/remove-crud?id=<%= dataTable[i].id %>"
            type="button"
          >
            Remove
          </a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
